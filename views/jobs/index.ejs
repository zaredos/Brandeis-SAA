<h2>Jobs Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Location</th>
      <th>Contact Email</th>
      <th>Registration Link</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.forEach(job => { %>
    <tr>
      <td>
        <a href="<%= `/jobs/${job._id}` %>"> <%= job.title %> </a>
      </td>
      <td><%= job.company %></td>
      <td><%= job.location %></td>
      <td><%= job.contactEmail %></td>
      <td><%= job.registrationLink %></td>
      <% if (loggedIn) {  %> 
        <td>
          <a href="<%=`/jobs/${job._id}/edit` %>"> Edit </a>
        </td>
        <td>
          <a
            href="<%= `jobs/${job._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')"
            >Delete</a
          >
        </td>
      <%} %>
    </tr>
    <% }); %>
  </tbody>
</table>
<% if (loggedIn) {  %> 
<div>
  <a href="/jobs/new">Create a new job</a>
</div>
<% } %>